<link rel="stylesheet" href="../css/styles.css">
<header>
    <a href="/">Home</a>
    <h1>Product <span id="pid">{{product._id}}</span></h1>
    <div>
        {{#if isLogin}}
            <a href="/user">Bienvenido {{user.first_name}} {{user.last_name}}</a>
        {{else}}
            <a href="/login">Inicia sesión aquí</a>
        {{/if}}
    </div>
  
</header>
<main>

    <div class="product" style="margin-top: 20px;">
        
        <div style="display: grid; place-content: center;">
            <img src="{{product.thumbnails}}" alt="{{product.title}}" style="aspect-ratio: 1; width: 200px; object-fit: cover;"/>
        </div>

        <h2>Title: {{product.title}}</h2>
        <h2>Price: ${{product.price}}</h2>
        <p>{{product.description}}</p>

    </div>

    <form action="" method="put" class="form">
        <p>Cantidad del producto</p>
        <input type="number" id="quantity">
        <button type="button" class="submit" onclick="addToCart()">Agregar</button>
    </form>

    <p id="cartId" style="display: none;">{{cartId}}</p>
</main>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/product.js"></script>
