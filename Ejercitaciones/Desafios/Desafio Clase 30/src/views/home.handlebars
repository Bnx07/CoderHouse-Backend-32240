<link rel="stylesheet" href="css/styles.css">
<header>
    <div>
        <a href="/">Home</a>
        {{#if isLogin}}
            <a href="/chat"><i class="fa-solid fa-comment"></i></a>
        {{/if}}
    </div>
    
    <h1>Products</h1>
    <div>
        {{#if isLogin}}
            <a href="/carts/{{user.cart}}"><i class="fa-solid fa-cart-shopping" style="color: white"></i></a>
            <a href="/user">Bienvenido {{user.first_name}} {{user.last_name}}</a>
        {{else}}
            <a href="/login">Inicia sesión aquí</a>
        {{/if}}
    </div>
  
</header>
<main>

  <div id="productsList">

    {{#each products}}
      <a href="/product/{{_id}}" class="product">
        
        <div style="display: grid; place-content: center;">
          <img src="{{thumbnails}}" alt="{{title}}" style="aspect-ratio: 1; width: 200px; object-fit: cover;"/>
        </div>

        <h2>Title: {{title}}</h2>
        <h2>Price: ${{price}}</h2>
        <p>{{description}}</p>

      </a>
    {{/each}}

  </div>

  <div class="movementDiv">

    <div style="grid-area: 'prev';">
      {{#if hasPrevPage}}
        <a href={{prevLink}} class="movementLink">Anterior</a>
      {{/if}}
    </div>

  <div class="simpleBorder" style="grid-area: 'number';">{{page}}</div>

    <div style="grid-area: 'next';">
      {{#if hasNextPage}}
        <a href={{nextLink}} class="movementLink">Siguiente</a>
      {{/if}}
    </div>

  </div>
</main>