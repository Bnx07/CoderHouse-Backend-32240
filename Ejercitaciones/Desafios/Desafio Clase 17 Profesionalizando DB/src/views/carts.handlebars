<link rel="stylesheet" href="../css/styles.css">
<header>
  <h1>Cart ID {{cart._id}}</h1>
</header>
<main>
  <div id="productsList">
    {{#each cart.products}}
        <div class="product">
          <div style="display: grid; place-content: center;">
            <img src="{{thumbnails}}" alt="{{title}}" style="aspect-ratio: 1; width: 200px; object-fit: cover;"/>
          </div>
          <h2>Title: {{title}}</h2>
          <h2>Price: ${{price}}</h2>
          <p>{{description}}</p>
          <p>{{id}}</p>
          <p>{{quantity}}</p>
        </div>
    {{/each}}
  </div>
</main>
