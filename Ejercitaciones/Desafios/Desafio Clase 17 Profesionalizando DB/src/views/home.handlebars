<link rel="stylesheet" href="css/styles.css">
<header>
  <h1>Products</h1>
</header>
<main>

  <div id="productsList">

    {{#each products}}
      <a href="/product/{{_id}}" class="product">
        
        <div style="display: grid; place-content: center;">
          <img src="{{thumbnails}}" alt="{{title}}" style="aspect-ratio: 1; width: 200px; object-fit: cover;"/>
        </div>

        <h2>Title: {{title}}</h2>
        <h2>Price: ${{price}}</h2>
        <p>{{description}}</p>

      </a>
    {{/each}}

  </div>

  <div class="movementDiv">

    <div style="grid-area: 'prev';">
      {{#if hasPrevPage}}
        <a href={{prevLink}} class="movementLink">Página anterior</a>
      {{/if}}
    </div>

    <div style="grid-area: 'next';">
      {{#if hasNextPage}}
        <a href={{nextLink}} class="movementLink">Siguiente página</a>
      {{/if}}
    </div>

  </div>
</main>