<link rel="stylesheet" href="../css/styles.css">
<header>
  <h1>Product <span id="pid">{{_id}}</span></h1>
</header>
<main>

    <div class="product" style="margin-top: 20px;">
        
        <div style="display: grid; place-content: center;">
            <img src="{{thumbnails}}" alt="{{title}}" style="aspect-ratio: 1; width: 200px; object-fit: cover;"/>
        </div>

        <h2>Title: {{title}}</h2>
        <h2>Price: ${{price}}</h2>
        <p>{{description}}</p>

    </div>

    <form action="" method="put" class="form">
        <p>Cantidad del producto</p>
        <input type="number" id="quantity">
        <button type="button" class="submit" onclick="addToCart()">Agregar</button>
    </form>
</main>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/product.js"></script>
