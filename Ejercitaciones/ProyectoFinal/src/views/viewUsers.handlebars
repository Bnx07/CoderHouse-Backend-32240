<link rel="stylesheet" href="css/styles.css">
<header>
    <a href="/" class="headerDiv">Home</a>
    <h1>Gestionar usuarios</h1>
    <div class="headerDiv toRight"></div>
</header>
<main>
    <div id="productsList">
        {{#each users}}
            <div class="product" style="margin-top: 20px;"> <!-- Hacer un campo que sea elegir y eso se submitea !-->
                <a onclick="deleteUser('{{email}}')" class="deleteUser">Eliminar</a>
                <div style="display: grid; place-content: center;">
                    <img src="{{thumbnail}}" alt="{{full_name}}" style="aspect-ratio: 1; width: 200px; object-fit: cover;"/>
                </div>
                <h2>{{full_name}}</h2>
                <h2>Rol {{role}}</h2>
                <p>Email {{email}}</p>
                <p>ID: {{id}}</p>
                <p>Cart: {{cart}}</p>
                <button style="height: 40px; width: 100%; border-Radius: 25px" onclick="swapRole('{{email}}')">Cambiar rol</button>
            </div>
        {{/each}}
    </div>
</main>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/viewUsers.js"></script>